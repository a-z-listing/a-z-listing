{
    "className": {
        "type": "string"
    },
    "columns": {
        "type": "number",
        "default": 3
    },
    "display": {
        "type": "string",
        "enum": ["posts", "terms"],
        "default": "posts"
    },
    "post-type": {
        "type": "string",
        "default": "page"
    },
    "displayPostContent": {
        "type": "boolean",
        "default": false
    },
    "displayPostContentRadio": {
        "type": "string",
        "default": "excerpt"
    },
    "excerptLength": {
        "type": "number",
        "default": 55
    },
    "displayPostDate": {
        "type": "boolean",
        "default": false
    },
    "displayFeaturedImage": {
        "type": "boolean",
        "default": false
    },
    "featuredImageAlign": {
        "type": "string",
        "enum": ["left", "center", "right"]
    },
    "featuredImageSizeSlug": {
        "type": "string",
        "default":"thumbnail"
    },
    "featuredImageSizeWidth": {
        "type": "number",
        "default":150
    },
    "featuredImageSizeHeight": {
        "type": "number",
        "default":150
    },
    "terms": {
        "type": "array",
        "items": {
            "type": "string"
        },
        "default": []
    },
    "taxonomy": {
        "type": "string",
        "default": ""
    },
    "numbers": {
        "type": "string",
        "enum": ["before", "after", "hide"],
        "default": "after"
    },
    "grouping": {
        "type": "number",
        "default": 1
    },
    "group-numbers": {
        "type": "boolean",
        "default": false
    }
}