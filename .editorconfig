root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.txt]
indent_style = spaces
indent_size = 2

[tests/data/*.txt]
indent_style = spaces
indent_size = 4

[*.md]
indent_style = spaces
indent_size = 2

[*.php]
indent_style = tab
indent_size = 4
curly_bracket_next_line = true
spaces_around_operators = true
spaces_around_brackets = true
indent_brace_style = KNF

[*.scss]
indent_style = tab
indent_size = 4
